<bg xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' xsi:schemaLocation='https://monkeymanboy.github.io/BSML-Docs/ https://raw.githubusercontent.com/monkeymanboy/BSML-Docs/gh-pages/BSMLSchema.xsd'>
    <vertical pref-height='80' pref-width='120'>
        <settings-container pref-width='100' pref-height='70' child-control-width='true'>
            <checkbox-setting text='Enabled' value='enabled' bind-value='true'/>
            <slider-setting text='Blend Factor' bind-value='true' />
            <slider-setting text='Radius' bind-value='true' />
            <slider-setting text='Intensity' bind-value='true' />
            <slider-setting text='Intensity Offset' bind-value='true' />
            <slider-setting text='Weight' bind-value='true' />
            <slider-setting text='Alpha Weight' bind-value='true' />
        </settings-container>
        <horizontal pref-width='100' pref-height='10' horizontal-fit='PreferredSize'>
			<horizontal pref-width='70'>
				<!--this is a placeholder/spacer-->
			</horizontal>
			<horizontal pref-width='30'>
				<button text='Cancel' />
				<primary-button text='Apply' />
			</horizontal>
        </horizontal>
    </vertical>
</bg>
